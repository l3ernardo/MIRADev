<link href="/css/mirastyle.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="./css/style.css">
<link rel="stylesheet" href="./css/jquery-ui.css">
<link rel="stylesheet" href="./css/jquery-ui.min.css">

<input type="hidden" id="docTitle" value="Open Issue">

<script>
	//Load document's name
	$('h1#pageTitle').text($('input#docTitle').val());

</script>
<div class="ibm-container" style="width:80%">
	<p style="text-align:right">
		<span style="color: #5C87C4">Created by</span> {{Log.0.name}} <span style="color: #5C87C4">on</span> {{Log.0.date}} <span style="color: #5C87C4">at</span> {{Log.0.time}}<br>
	</p>

<table id="imported_summary" cellspacing="0" cellpadding="0" border="0" width="100%" class="ibm-data-table">
  <caption class="mira-caption"><em>Imported summary information</em></caption>
<tr>
  <td width="25%">Reporting quarter:</td><td><b class="ibm-important">{{reportingQuarter}}</b></td>
</tr>
<tr>
  <td>Enterprise item:</td><td>{{enterpriseItem}}</td>
</tr>
<tr>
  <td>Type:</td><td>{{type}}</td>
</tr>
<tr>
  <td>Status:</td><td>{{status}}</td>
</tr>
<tr>
  <td>URL:</td><td><a href="{{url}}">{{url}}</a></td>
</tr>
<tr>
  <td>Business Unit:</td><td>{{businessUnit}}</td>
</tr>
<tr>
  <td>Process:</td><td>{{process}}</td>
</tr>
<tr>
  <td>Executing business unit:</td><td>{{executingBusinessUnit}}</td>
</tr>
<tr>
  <td>Country:</td><td>{{country}}</td>
</tr>
<tr>
  <td>Controllable unit:</td><td>{{controllableUnit}}</td>
</tr>
<tr>
  <td>Process type:</td><td>{{processType}}</td>
</tr>
<tr>
  <td>Risk Abstract:</td><td>{{riskAbstract}}</td>
</tr>
<tr>
  <td>Original issue target date:</td><td>{{originalTargetDate}}</td>
</tr>
<tr>
  <td>current issue target date:</td><td>{{currentTargetDate}}</td>
</tr>
<tr>
  <td>Reasons target date extended:</td><td>{{reasons}}</td>
</tr>
<tr>
  <td>Number of tasks:</td><td>{{numTasks}}</td>
</tr>
<tr>
  <td>Number of tasks open:</td><td>{{numTasksOpen}}</td>
</tr>
<tr>
  <td>Number of missed tasks:</td><td>{{numMissedTasks}}</td>
</tr>
<tr>
  <td>Number of missed tasks override:</td>
  <form id="openissueform" class="ibm-column-form" name="form" method="POST" action="/saveopenissue">
    <input type="hidden" name="_id" value="{{_id}}">
    <td>
{{#if editmode}}
  <input type="text" name="numMissedTasksOverride" value="{{numMissedTasksOverride}}" size="3" maxlength="3">
{{else}}
  {{numMissedTasksOverride}}
{{/if}}
</td>
</tr>
</form>
<tr>
  <td>Measure:</td><td>{{measure}}</td>
</tr>
</table>

<table id="derived_table" cellspacing="0" cellpadding="0" border="0" width="100%" class="ibm-data-table">
  <caption class="mira-caption"><em>Derived information</em></caption>
<tr>
  <td>Scorecard category:</td><td>{{scorecardCategory}}</td>
</tr>
<tr>
  <td>BU IMT:</td><td>{{IMT}}</td>
</tr>
<tr>
  <td>BU IOT:</td><td>{{IOT}}</td>
</tr>
</table>

		<div class="ibm-buttons-row">
      <p>
        {{#if editmode}}
          <input class="ibm-btn-arrow-pri" type="button" id="btn_save" value="Save"/>
          <span class="ibm-sep">&nbsp;</span>
          <input class="ibm-btn-cancel-sec" type="button" id="btn_cancel" value="Close" />
        {{else}}
        <input class="ibm-btn-arrow-pri" type="button" id="btn_edit" value="Edit"/>
        <span class="ibm-sep">&nbsp;</span>
        <input class="ibm-btn-cancel-sec" type="button" id="btn_cancel" value="Close" />
        {{/if}}
      </p>
		</div>
</div>
<script>
$('#btn_edit').click(function() {
  window.location.href = "openissue?id="+$("input[name='_id']").val()+"&edit";
});
$('#btn_save').click(function(evt) {
    $("#openissueform").submit();
});
$('#btn_cancel').click(function() {
	window.location.href = "/assessment?id=";
});
</script>
