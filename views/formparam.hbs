<link  href="./css/jquery.dataTables.css" rel="stylesheet" type="text/css">
<link href="../css/jsoneditor.css" rel="stylesheet" type="text/css">
<script src="./lib/jquery.dataTables.js"></script>
<script src="./lib/jsoneditor.min.js"></script>
<script src="./js/parameters.js"/></script>
<div class="ibm-container" style="width:100%">
	<div class="ibm-container-body">
		<br/>
		<br/>
		<div class="ibm-buttons-row">
		</div>
		<div class="ibm-body">
			<div class="ibm-main">
				<div class="ibm-title ibm-subtitle">
					<h2>{{ doc.keyName }}</h2>
				</div>

				<div class="ibm-container ibm-alternate ibm-buttons-last">
					<div class="ibm-container-body">
						<div id="paramContent" title="Param Details" style="display:;">
							<form id="form" class="ibm-column-form ibm-styled-form" name="form" method="POST" action="/saveParam">
								<input type="hidden" id="id" name="id" value="{{ doc._id }}">
								<input type="hidden" id="rev" name="rev" value="{{ doc._rev }}">
								<p style="text-align:left">
									<label for="title">Name:<span class="ibm-required">*</span></label>
									<span><input type="text" id="fldname" name="fldname" value="{{ doc.keyName }}"></span>
								</p>
								<p style="text-align:left" class="ibm-form-elem-grp">
									<label id="lblEnable" class="ibm-form-grp-lbl">Active:<span class="ibm-required">*</span></label>
									<span class="ibm-input-group">
										<input type="radio" name="fldtrue" value="true" checked ><label for="fldtrue">True</label>
										<input type="radio" name="fldtrue" value="false" ><label for="fldtrue">False</label>
									</span>
								</p>
								<p style="text-align:left">
									<label for="fldvalue" align="left">Values:<span class="ibm-required">*</span></label>
									<span style="display:none;"><textarea id="fldvalue" name="fldvalue" rows="5" cols="50">{{{valuesToString doc.value}}}</textarea></span>
									<div id="jsoneditor"></div>
									<script>$(document).ready(function() {editParam( "{{doc.active}}" );});</script>

								</p>
								<p style="text-align:left">
									<label for="flddescM">Description:<span class="ibm-required">*</span></label>
									<span><input type="text" id="flddesc" name="flddesc" size="50" class="text" value="{{ doc.description }}"></span>
								</p>
								<div class="ibm-rule"><hr/></div>
								<div class="ibm-buttons-row">
									<p>
										<input class="ibm-btn-arrow-pri" type="submit" id="btn_submit" value="Submit" />
										<span class="ibm-sep">&nbsp;</span>
										<input class="ibm-btn-cancel-sec" onclick="location.href = '/parameter';" type="button" id="btn_cancel" value="Cancel" />
									</p>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
