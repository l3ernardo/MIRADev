<table id="admin_table" cellspacing="0" cellpadding="0" border="0" width="100%" class="ibm-data-table">
	<caption class="mira-caption"><em>For Administrative Use Only</em></caption>
	{{#if editmode}}
		{{!-- AU ControllableUnit form - Administrative Use Only section - Edit Mode with Admin Access --}}
		{{#if admin}}
			<tr>
				<td><label for="BRGMembership">BU reporting groups:</label></td>
				<td>
					<input type="hidden" id="BRGMembership" name="BRGMembership" value="{{BRGMembership}}">
					{{{multiSelect "brglist" ReportingGroupList "docid" "name" "scopeBRG"}}}
				</td>
			</tr>
			<tr>
				<td><label for="CUSize">Size:<span class="ibm-required">*</span></label></td>
				<td>
					<span>
					{{{uniqueSelect "CUSize" parameters.UnitSizes.0.options "name" "name" CUSize}}}
					</span>
				</td>
			</tr>
			<tr>
				<td width="27%">{{{uniqueSelect "MetricsCriteria" parameters.Metrics.0.options "name" "name" MetricsCriteria}}}<b for="MetricsCriteria">($M USD):</b></td>
				<td>
					<span><input type="text" name="MetricsValue" value="{{MetricsValue}}" class="td_tcv" size="10"> (planning purposes only)</span>
				</td>
			</tr>
			<tr>
				<td><label for="AuditableFlag">Auditable Unit?:<span class="ibm-required">*</span></label></td>
				<td>
					<span>
						{{#if AuditableFlagYes}}
							<input class="showsize" type="radio" id="AFYes" name="AuditableFlag" value="Yes" checked>Yes
							<input type="radio" name="AuditableFlag" id="AFNo" value="No">No
						{{else}}
							<input class="showsize" type="radio" id="AFYes" name="AuditableFlag" value="Yes">Yes
							<input type="radio" name="AuditableFlag" id="AFNo" value="No" checked>No
						{{/if}}
					</span>
				</td>
			</tr>
			<tr>
				<td><label for="AuditProgram">Audit Program:<span class="ibm-required">*</span></label></td>
				<td>
					<span><input type="text" name="AuditProgram" value="{{AuditProgram}}" size="100" maxlength="300"></span>
				</td>
			</tr>
			{{#if AuditableFlagYes}}
				<tr>
					<td>Internal Audits:</td>
					<td><!-- Internal Audits embedded view here --></td>
				</tr>
			{{/if}}
		{{else}}
			{{!-- AU ControllableUnit form form - Administrative Use Only section - Edit Mode with no Admin Access --}}
			<tr><td width="25%">BU reporting groups:</td><td>{{BRGMembershipDisp}}</td></tr>
			<tr><td>Size:</td><td>{{CUSize}}</td></tr>
			<tr><td>{{MetricsCriteria}} ($M USD):</td><td><font class="td_tcv">{{MetricsValue}}</font> (planning purposes only)</td></tr>
			<tr><td>Auditable Unit?:</td><td>{{AuditableFlag}}</td></tr>
			<tr><td>Audit Program:</td><td>{{AuditProgram}}</td></tr>
			{{#if AuditableFlagYes}}
				<tr>
					<td>Internal Audits:</td>
					<td><!-- Internal Audits embedded view here --></td>
				</tr>
			{{/if}}
		{{/if}}
	{{else}}
		{{!-- AU ControllableUnit form form - Administrative Use Only section - Read Mode --}}
		<tr><td width="25%">BU reporting groups:</td><td>{{BRGMembershipDisp}}</td></tr>
		<tr><td>Size:</td><td>{{CUSize}}</td></tr>
		<tr><td>{{MetricsCriteria}} ($M USD):</td><td><font class="td_tcv">{{MetricsValue}}</font> (planning purposes only)</td></tr>
		<tr><td>Auditable Unit?:</td><td>{{AuditableFlag}}</td></tr>
		<tr><td>Audit Program:</td><td>{{AuditProgram}}</td></tr>
		{{#if AuditableFlagYes}}
			<tr>
				<td>Internal Audits:</td>
				<td><!-- Internal Audits embedded view here --></td>
			</tr>
		{{/if}}
	{{/if}}
</table>
