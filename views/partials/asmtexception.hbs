<table id="exception_table" cellspacing="0" cellpadding="0" border="0" width="100%" class="ibm-data-table">
	<caption class="mira-caption"><em>Exception Details</em></caption>
	<tr>
		{{#if editmode}}
			<td width="25%"><label for="DecommitExplanation">Missed commitment explanation:</label></td>
			<td>
				<span><input type="text" name="DecommitExplanation" id="DecommitExplanation" value="{{DecommitExplanation}}" size="135"></span>
			</td>
		{{else}}
			<td width="25%">Missed commitment explanation:</td><td>{{DecommitExplanation}}</td>
		{{/if}}
	</tr>
</table>
